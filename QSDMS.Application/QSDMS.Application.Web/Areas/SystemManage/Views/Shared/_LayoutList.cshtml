<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/Content/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styles/animate.min.css" rel="stylesheet" />
    <link href="~/Content/styles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/default/style.min.css" rel="stylesheet" />
    <script src="~/Content/scripts/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Content/scripts/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/scripts/utils/dms-ui.src.js"></script>
    @RenderSection("Scripts", false)
    <script type="text/javascript">
        //滚动条
        $(function () {
            $("#contentmain").slimScroll({
                height: "100%",
                railOpacity: 0.8,
                alwaysVisible: !1
            })
            //更改父页面标题
            window.parent.document.title = window.parent.document.title + "-" + document.title;
        })
    </script>
</head>
<body class="gray-bg" style="overflow:hidden;height:100%" id="contentmain">
    @RenderBody()
    @Html.AntiForgeryToken()
</body>
</html>
